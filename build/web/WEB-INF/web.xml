<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ConexaoFilter</filter-name>
        <filter-class>br.com.grupointegrado.filter.ConexaoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ConexaoFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContatoServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.ContatoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnuncioServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.AnuncioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.ImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnuncioDetalhesServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.AnuncioDetalhesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriaServlet</servlet-name>
        <servlet-class>br.com.grupointegrado.servlet.CategoriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContatoServlet</servlet-name>
        <url-pattern>/contato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnuncioServlet</servlet-name>
        <url-pattern>/anuncio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/img</url-pattern>
    </servlet-mapping>
    <!-- Dependency Test to upload files to server 
    <dependency>
        <grouprId>commons-fileupload</grouprId>
        <artifactId>commons-fileupload</artifactId>
        <version>1.3.3</version>
    </dependency> -->
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnuncioDetalhesServlet</servlet-name>
        <url-pattern>/anuncio-detalhes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriaServlet</servlet-name>
        <url-pattern>/categoria</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
